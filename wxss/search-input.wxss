.index-soso {
  background-color: #fabe00;
  color: #fff;
  padding: 12rpx 0;
}

.index-soso button:not([size='mini']) {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;
  margin: 0 12rpx;
  background: initial;
  font-weight: initial;
}

.index-soso button::after {
  display: none;
}

.index-soso .so {
  display: flex;
  flex-direction: row;
  background: #ffffe8;
  height: 60rpx;
  border-radius: 60rpx;
  flex-grow: 1;
  align-items: center;
  color: rgb(204, 204, 204);
  font-size: 26rpx;
  width: 600rpx;
}

.so-icon {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-radius: 60rpx 0 0 60rpx;
  height: 64rpx;
  font-size: 0;
  flex: 0 0 60rpx;
  padding-right: 10rpx;
}

.icon-msg-idx {
  width: 46rpx;
  height: 50rpx;
  margin-top: 6rpx;
}

.sel-adr {
  padding: 0 50rpx 0 10rpx;
  height: 64rpx;
  line-height: 64rpx;
  position: relative;
  white-space: nowrap;
  font-size: 30rpx;
}

.sel-adr::after {
  position: absolute;
  right: 16rpx;
  top: 18rpx;
  left: initial;
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #fff;
  border-right: 4rpx solid #fff;
  -webkit-transform: rotate(135deg);
  transform: rotate(135deg);
}
