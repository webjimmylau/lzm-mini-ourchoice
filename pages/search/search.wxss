page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  color: #333;
  white-space: nowrap;
}

.search-result {
  display: flex;
  flex-flow: column;
}

.hot-box {
  margin-top: 20rpx;
}

.search-hot {
  width: 710rpx;
  height: 36rpx;
  margin: 40rpx auto 25rpx;
  color: #888;
  font-size: 28rpx;
}

.search-mtop {
  margin-top: 10rpx;
}

.cell-box {
  display: flex;
  flex-flow: row wrap;
  width: 710rpx;
  margin: auto;
  font-size: 24rpx;
}

.search-result .cell {
  padding: 6rpx 20rpx;
  background-color: #f4f4f4;
  margin: 0 30rpx 25rpx 0;
  color: #000;
}

.search-result .cell-x {
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  border-bottom: 1px solid #f5f5f5;
  color: #666;
}

.nav-box {
  flex-direction: row;
  width: 750rpx;
  height: 80rpx;
  align-items: center;
  display: -webkit-flex;
  text-align: center;
  border-bottom: 1px solid #e5e5e5;
  font-size: 30rpx;
  color: #353535;
  position: relative;
}

.nav-li {
  width: 33.333%;
  position: relative;
}
.nav-li:nth-last-child(2) {
  border-left: 1px solid #eee;
  border-right: 1px solid #eee;
}

.nav-li::after  {
  position: absolute;
  right: initial;
  top: 11px;
  left: initial;
  margin-left: 10rpx;
  content: '';
  width: 0;
  height: 0;
  border-width: 12rpx;
  border-style: solid;
  border-color: #999 transparent transparent transparent;
}

.nav-li:nth-child(2)::after {
  display: none;
}

.nav-box .on {
  color: red;
}
.nav-box .on.nav-li::after {
  border-color: red transparent transparent transparent;
}

.check-show {
  position: absolute;
  top:80rpx;
  left: 0;
  width: 750rpx;
  z-index: 66;
  text-align: left;
  
}
.check-cell {
  padding: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.cell-on {
  color: red;
}

/* list */

.list-box {
  flex: 1;
  height: 100%;
  background-color: #efeff4;
}

.hg {
  height: 100%;
}

.wrap-box {
  display: flex;
  width: 750rpx;
  margin: auto;
  flex-wrap: wrap;
  justify-content: flex-start;
}
