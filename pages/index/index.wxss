/**index.wxss**/
@import "/wxss/search-input.wxss";
page {
  background-color: #eee;
}

.swiper-box {
  width: 100%;
  height: 300rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
  background-color: #ccc;
}

.shop-categories {
  width: 730rpx;
  font-size: 26rpx;
  margin: 12rpx auto;
}

.categories-item {
  margin: 0 0 0 1px;
  height: 188rpx;
  width: 178rpx;
  color: #666;
}

.categories-item text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.shop-categories image {
  width: 120rpx;
  height: 120rpx;
  margin: 10rpx 0 12rpx;
}

.discount {
  height: 80rpx;
  background-color: #fff;
  justify-content: space-between;
  color: red;
  font-size: 30rpx;
}

.discount text {
  margin: 0 20rpx;
}

.discount-title {
  font-size: 22rpx;
  color: #666;
  position: relative;
  padding-right: 20rpx;
  margin-right: 20rpx;
}

.discount-title::after {
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -8rpx;
  left: initial;
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #c7c6cc;
  border-right: 4rpx solid #c7c6cc;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}

.wrap-box {
  display: flex;
  width: 710rpx;
  margin: auto;
  flex-wrap: wrap;
  justify-content: space-between;
}

.item-title {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  color: #666;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.shop-off {
  margin-top: 30%;
  color: #900;
  font-size: 26rpx;
}

.shop-off image {
  width: 200rpx;
  height: 200rpx;
}

.off-title {
  font-size: 54rpx;
  margin: 50rpx auto 10rpx;
}

.off-btn {
  font-size: 30rpx;
  width: 500rpx;
  height: 80rpx;
  background-color: #fabe00;
  color: #fff;
  margin-top: 40rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 12rpx;
}
