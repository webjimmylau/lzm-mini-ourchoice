.sku-value {
  width: 620rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  white-space: nowrap;
}
.sku-left {
  display: flex;
  flex: 1;
  justify-content: space-between;
  align-items: center;
}
.sku-left text {
  margin-right: 10px;
}
.sel-num {
  border: 1px solid #ddd;
  background-color: #eee;
  height: 40px;
  line-height: 40px;
  text-align: right;
  padding-right: 20rpx;
  margin-top: -20rpx;
}
.sel-num text {
  color: red;
}