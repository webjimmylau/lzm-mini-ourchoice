@import "/wxss/search-input.wxss";
.pla-class {
  font-size: 26rpx;
  color: #999;
}

.search-input {
  color: #333;
  height: 48rpx;
}

.icon-clear {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 0 60rpx 60rpx 0;
  height: 60rpx;
  font-size: 0;
  flex: 0 0 72rpx;
}

.search-result {
  display: flex;
  flex-flow: column;
}

.cell-box {
  display: flex;
  flex-flow: row wrap;
  width: 710rpx;
  margin: auto;
}

.search-result .cell-x {
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  border-bottom: 1px solid #f5f5f5;
  color: #666;
}
