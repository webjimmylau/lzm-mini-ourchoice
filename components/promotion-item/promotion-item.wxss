.promotions {
  display: flex;
  width: 710rpx;
  padding: 20rpx;
  margin: 20rpx auto 0;
  background-color: #fff;
  border-radius: 8rpx;
}

.pro-img {
  margin-right: 24rpx;
  width: 220rpx;
  height: 220rpx;
  text-align: center;
  background-color: #eee;
  overflow: hidden;
  border-radius: 8rpx;
}

.pro-img image {
  width: 224rpx;
  height: 224rpx;
  margin: -2rpx;
}

.pro-flex {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.pro-title {
  font-weight: 400;
  font-size: 26rpx;
  color: #333;
  width: auto;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-wrap: break-word;
  white-space: normal;
  word-break: break-all;
  margin: 0 20rpx 8rpx 0;
}

.pro-tags {
  display: flex;
  flex-wrap: wrap;
}

.pro-tags text {
  color: red;
  border: 1px solid red;
  border-radius: 120rpx;
  padding: 4rpx 20rpx;
  font-size: 22rpx;
  margin: 0 10rpx 10rpx 0;
  white-space: nowrap;
}

.pro-price {
  color: red;
  display: inline-block;
}

.box-price {
  display: flex;
  align-items: center;
  height: 60rpx;
  float: left;
}

.p-min {
  font-size: 26rpx;
  margin-right: 4rpx;
  margin-bottom: -8rpx;
}

.p-min-unit {
  font-size: 26rpx;
  margin-left: 4rpx;
  margin-bottom: -8rpx;
  color: #999;
}

.p-max {
  font-size: 34rpx;
  font-weight: 700;
  margin-bottom: 0;
}

.p-decoration {
  text-decoration: line-through;
  color: #999;
  margin-left: 20rpx;
  font-size: 26rpx;
  margin-bottom: -8rpx;
}

.pro-btn {
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #fabe00;
  font-weight: initial;
  color: #fff;
  font-size: 26rpx;
  border-radius: 8rpx;
  float: right;
}
