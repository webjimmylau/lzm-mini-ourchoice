.top-box {
  display: flex;
  background-color: #fff;
  padding: 0;
  justify-content: space-between;
  width: 750rpx;
  height: 100rpx;
}

.logo {
  display: flex;
  align-items: center;
  color: #333;
  font-size: 24rpx;
  line-height: 1.1;
}

.logo image {
  border-radius: 60rpx;
  width: 80rpx;
  height: 80rpx;
  margin: 0 20rpx;
  border: 1px solid #e7e7e7;
}

.logo text {
  flex: 1;
  height: 40rpx;
  line-height: 40rpx;
}

.follow {
  border: 1px solid #ccc;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  margin: 0 20rpx 0 12rpx;
  font-size: 20rpx;
}

.follow-on {
  border: 1px solid #fabe00;
  color: #fabe00;
}

.top-info {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #666;
  white-space: nowrap;
}

.top-info text {
  margin-left: 1px;
}

.top-info image {
  width: 20rpx;
  height: 20rpx;
}

.icon-sv {
  width: 20rpx;
  height: 16rpx;
  margin: 0 0 0 6rpx;
}