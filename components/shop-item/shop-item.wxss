.line_10 {
  height: 20rpx;
  background-color: #f6f6f6;
}
.flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.flex-x-center {
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  -ms-flex-pack: center;
  justify-content: center;
}

.flex-y-center {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.top-box {
  width: 710rpx;
  background-color: #fff;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  justify-content: space-between;
  margin: 0 20rpx;
  border-radius: 4rpx;
}

.logo text {
  color: rgba(0, 0, 0, 0.9);
  font-size: 28rpx;
  font-weight: 400;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-align: left;
}

.image-box {
  border-radius: 100rpx;
  width: 80rpx;
  height: 80rpx;
  border: 1px solid #e7e7e7;
  margin-right: 16rpx;
  overflow: hidden;
  vertical-align: top;
  flex-shrink:0;
  flex-basis:80rpx;
}
.shop-btn {
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  white-space: nowrap;
}
.fav-btn {
  border: 1px solid #C81613;
  color: #C81613;
}
.fav-c {
  border: 1px solid #eeeeee;
  color: #999;
}
.follow {
  border: 1px solid #fabe00;
  margin-left: 12rpx;
  color: #fabe00;
}
